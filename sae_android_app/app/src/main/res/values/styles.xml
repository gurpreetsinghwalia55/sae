<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LightStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/materialRed500</item>
        <item name="android:colorPrimaryDark">@color/materialRed700</item>

    </style>

    <style name="AppTheme.LoginTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/materialRed500</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.LoginTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
